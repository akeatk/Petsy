<!DOCTYPE html>
<html>
  <head>
    <title>Petsy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'reset' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.images={
        homeIcon: '<%= asset_path('home-icon.png') %>',
        favIcon:'<%= asset_path('fav-icon.png') %>',
        shopIcon:'<%= asset_path('shop-icon.png') %>',
        profileIcon:'<%= asset_path('profile-icon.png') %>',
        cartIcon:'<%= asset_path('cart-icon.jpg') %>',
        pencilIcon:'<%= asset_path('pencil-icon.png') %>',
        noStar:'<%= asset_path('no-star.png') %>',
        halfStar:'<%= asset_path('half-star.png') %>',
        fullStar:'<%= asset_path('full-star.png') %>',
        camIcon:'<%= asset_path('cam-icon.png') %>',
        trashIcon:'<%= asset_path('trash-icon.png') %>'
      };
    </script>
    <% if current_user %>
      <script>
        window.currentUser = {
          'id': <%= current_user.id %>,
          'username':'<%= current_user.username %>',
          'name': `<%=
            (if current_user.first_name && current_user.last_name
              (current_user.first_name+' '+current_user.last_name)
            elsif current_user.first_name
              current_user.first_name
            elsif current_user.last_name
              current_user.last_name
            else
              current_user.username
            end)
          %>`
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
    <div class='footer'>
      <div>
        <h1>Petsy</h1>
        <div>
          <a href='https://github.com/akeatk'>Github</a>
          <a href='https://www.linkedin.com/in/alex-kao-556799159/'>LinkedIn</a>
        </div>
      </div>
    </div>
  </body>
</html>
